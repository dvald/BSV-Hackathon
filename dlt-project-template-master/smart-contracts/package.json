{
  "name": "smart-contracts",
  "version": "1.0.0",
  "description": "Smart contracts project",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf build && npm run compile && npm run gen-doc && npm run generate-contract-wrappers && npm run update-backend-wrappers && npm run gen-doc-file",
    "compile": "ts-node src/compile.ts",
    "gen-doc": "ts-node src/gen-doc.ts",
    "gen-doc-file": "ts-node src/gen-doc-file.ts",
    "generate-contract-wrappers": "rimraf src/contract-wrappers && ts-node src/generate-contract-wrappers.ts",
    "update-backend-wrappers": "ts-node src/backend-update.ts",
    "deploy": "ts-node src/index.ts",
    "deploy:upgrade": "ts-node src/contract-upgrade.ts",
    "lint": "eslint --fix src",
    "test-lint": "eslint src",
    "test": "ts-node src/test.ts"
  },
  "license": "ISC",
  "devDependencies": {
    "@asanrom/async-tools": "2.1.0",
    "@asanrom/smart-contract-wrapper": "5.4.4",
    "@types/node": "20.6.0",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "dotenv": "16.3.1",
    "eslint": "8.49.0",
    "rimraf": "5.0.1",
    "solc": "0.8.24",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "private": true
}
